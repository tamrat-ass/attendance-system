{
  "crons": [
    {
      "path": "/api/backup",
      "schedule": "0 2 * * *"
    }
  ],
  "functions": {
    "app/api/backup/route.ts": {
      "maxDuration": 300
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "ignores": [
    "mk-attendance-flutter/**",
    "APK_INSTALL_PACKAGE/**",
    "attendance_system/**",
    "*.apk",
    "*.bat",
    "*.sql",
    "*.md",
    "test-*.js",
    "test-*.html",
    "debug-*.js",
    "fix-*.js",
    "check-*.js"
  ]
}